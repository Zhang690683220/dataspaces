#!/bin/bash

DSPACES_INC="-I%incdir%  "
DSPACES_LIB="-L%libdir% -ldspaces -ldscommon -ldart     -lm -lpthread"

OPTIND=1

PRINT_CFLAGS=no
PRINT_LDFLAGS=no

while getopts "h?cl" opt; do
    case "$opt" in
    h|\?)
        echo "Placeholder"
        exit 0
        ;;
    c)
        PRINT_CFLAGS=yes
        ;;
    l)
        PRINT_LDFLAGS=yes
        ;;
    esac
done

if [ "$PRINT_CFLAGS" == "yes" ]; then
    echo $DSPACES_INC
fi

if [ "$PRINT_LDFLAGS" == "yes" ]; then
    echo $DSPACES_LIB
fi

